<UserControl x:Class="Mystat.UserControls.RepairPasswordUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mystat.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0 120">
        <TextBox Height="50" Width="250" Margin="0 20 0 0"
                 VerticalContentAlignment="Center" FontSize="20"
                 Style="{StaticResource SettingTextbox}" Tag="Email"></TextBox>
        <Button Height="50" Width="250" FontSize="20" Foreground="White"
                    Margin="0 20">Enter</Button>
        <Button Height="30" Width="200" Background="{x:Null}" Foreground="White" 
                    FontSize="17"  Cursor="Hand"
                Command="{Binding GoToBackCommand}">go back to login</Button>
    </StackPanel>
</UserControl>
