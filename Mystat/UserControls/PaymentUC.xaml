<UserControl x:Class="Mystat.UserControls.PaymentUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mystat.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="1050">
    <Grid Background="#F1F6FA">
        <StackPanel Margin="0 20 20 20" Background="White">
            <Label Style="{StaticResource HeaderLabel}">Payment Information</Label>

            <WrapPanel>
                <Border Width="500" Height="200" Background="White">
                    <Border.Effect>
                        <DropShadowEffect Color="#E0E5E9"/>
                    </Border.Effect>
                    <Grid Margin="30">
                        <Border Height="30" Background="Yellow" VerticalAlignment="Top"></Border>
                        <!--Must bind-->
                        <Label VerticalAlignment="Bottom">1C code:01859729</Label>
                    </Grid>
                </Border>
            </WrapPanel>
        </StackPanel>
    </Grid>
</UserControl>
