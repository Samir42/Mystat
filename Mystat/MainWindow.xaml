<Window x:Class="Mystat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mystat"
        
        xmlns:uc="clr-namespace:Mystat.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1024" WindowStartupLocation="CenterScreen">
    <ScrollViewer>
        <Grid Background="#F1F6FA">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="15*"/>
            </Grid.ColumnDefinitions>


            <StackPanel Grid.Column="0" Background="Black"></StackPanel>

            <StackPanel Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="80"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Background="Red">

                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Grid.Row="1">
                        <uc:ProgressUC/>
                    </StackPanel>
                </Grid>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window> 
